<Page x:ConnectionId='1'
    x:Class="Parkomania.Admin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parkomania"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Pivot Title="Admins" Grid.RowSpan="5">
            <PivotItem Header="Admins">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="10, 0, 10, 0"/>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="10, 0, 10, 0"/>
                    <ListView x:ConnectionId='6' x:Name="listView" Grid.Row ="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" Margin="10,10,0,0" VerticalAlignment="Center"                               >
                    </ListView>
                    <AutoSuggestBox HorizontalAlignment="Stretch" Margin="10,0,10,0" VerticalAlignment="Center"/>
                    <Button x:ConnectionId='7' x:Name="button" Content="Add" HorizontalAlignment="Stretch" Margin="10,0,10,0" Grid.Row="3" VerticalAlignment="Center" />
                </Grid>
            </PivotItem>
            <PivotItem Header="Clients">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="10, 0, 10, 0"/>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="10, 0, 10, 10"/>
                    <ListView x:ConnectionId='5' x:Name="listView1" Grid.Row ="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Center"                              >
                    </ListView>
                    <AutoSuggestBox HorizontalAlignment="Stretch" Margin="10,0,10,0" VerticalAlignment="Center"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Parkings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="10, 0, 10, 0"/>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="10, 0, 10, 10"/>
                    <ListView x:ConnectionId='4' x:Name="listView3" Grid.Row ="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Center"                                 >
                        <x:String>Parking1</x:String>
                        <x:String>Parking2</x:String>
                        <x:String>Parking3</x:String>
                        <x:String>Parking4</x:String>
                    </ListView>
                    <AutoSuggestBox HorizontalAlignment="Stretch" Margin="10,0,10,0" VerticalAlignment="Center"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Inbox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="10, 0, 10, 0"/>
                    <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="10, 0, 10, 0"/>
                    <ListView x:ConnectionId='2' x:Name="listView2" Grid.Row ="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Center" >
                        <x:String>Poruka 1</x:String>
                        <x:String>Poruka 2</x:String>
                        <x:String>Poruka 3</x:String>
                    </ListView>
                    <AutoSuggestBox HorizontalAlignment="Stretch" Margin="10,0,10,0" VerticalAlignment="Center"/>
                    <Button x:ConnectionId='3' x:Name="button1" Content="Delete" HorizontalAlignment="Stretch" Margin="10,0,10,0" Grid.Row="3" VerticalAlignment="Center"/>
                </Grid>
            </PivotItem>
        </Pivot>
        <local:Profil HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Grid.Row="0"  />
    </Grid>
</Page>

