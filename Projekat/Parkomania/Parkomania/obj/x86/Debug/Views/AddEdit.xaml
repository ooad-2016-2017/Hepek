<Page
    x:Class="Parkomania.AddEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parkomania"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="textBlock" Grid.Column="0" HorizontalAlignment="Right" Margin="10,0,0,0" TextWrapping="Wrap" Text="First name:" VerticalAlignment="Center"/>
        <TextBlock x:ConnectionId='2' x:Name="textBlock1" Grid.Column="0" HorizontalAlignment="Right" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Last name:" VerticalAlignment="Center" />
        <TextBlock x:ConnectionId='3' x:Name="textBlock2" Grid.Column="0" HorizontalAlignment="Right" Margin="10,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Center"/>
        <TextBox x:ConnectionId='4' x:Name="textBox" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBox x:ConnectionId='5' x:Name="textBox1" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBox x:ConnectionId='6' x:Name="textBox2" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Button x:ConnectionId='7' x:Name="button" Content="Cancel" HorizontalAlignment="Stretch" Margin="10,0,10,0" Grid.Row="3" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Button x:ConnectionId='8' x:Name="button1" Content="Save" HorizontalAlignment="Stretch" Margin="10,0,10,0" Grid.Row="3" VerticalAlignment="Center" Grid.Column="3"/>

    </Grid>
</Page>

