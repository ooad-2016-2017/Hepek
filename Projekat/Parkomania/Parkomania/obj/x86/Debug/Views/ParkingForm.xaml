<Page
    x:Class="Parkomania.ParkingForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parkomania"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>

            </Grid.ColumnDefinitions>
            <CommandBar Margin="10,10,0,0" HorizontalAlignment="Left" Width="auto" Grid.ColumnSpan="2">
                <AppBarButton Icon ="Home" Label="Home"/>
                <AppBarButton Icon ="Setting" Label="Settings"/>
                <AppBarButton Icon ="Help" Label="Help" />
            </CommandBar>
            <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Right" Margin="0" TextWrapping="Wrap" Text="Free Spaces:" VerticalAlignment="Center" Grid.Row="2"/>
            <TextBlock x:ConnectionId='2' x:Name="textBlock1" HorizontalAlignment="Right" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="3">
                <Run Text="Price:"/>
                <LineBreak/>
                <Run/>
            </TextBlock>
            <ComboBox x:ConnectionId='3' x:Name="comboBox" SelectedValuePath="{Binding Path=selectedvaluepath, Mode=TwoWay}" HorizontalAlignment="Stretch"  Margin="10,0,10,0" VerticalAlignment="Center" Grid.Column="2" Grid.Row="3" Height="auto">
                <TextBlock Text="{Binding Path=Valuta, Mode=TwoWay}"/>
            </ComboBox>
            <TextBox x:ConnectionId='4' x:Name="textBox" HorizontalAlignment="Stretch" Text="{Binding Path=freeSpaces, Mode=TwoWay}" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="2" Height="32" Grid.Column="1" Width="auto"/>
            <TextBox x:ConnectionId='5' x:Name="textBox1" HorizontalAlignment="Stretch" Text="{Binding Path=price, Mode=TwoWay}" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="3" Height="32" Grid.Column="1" Width="auto"/>
            <TextBlock x:ConnectionId='6' x:Name="textBlock2" HorizontalAlignment="Right" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center"  Grid.Row="4" RenderTransformOrigin="-0.274,0.54"                                               >
                <Run Text="From:"/>
            </TextBlock>
            <TextBlock x:ConnectionId='7' x:Name="textBlock3" HorizontalAlignment="Right" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="4">
                <Run Text="Until:"/>
            </TextBlock>
            <Button x:ConnectionId='8' x:Name="button1" Content="Apply"  Command="{Binding Path=apply}" HorizontalAlignment="Stretch" Margin="10,5,10,5" VerticalAlignment="Stretch" Grid.Row="7" Grid.ColumnSpan="5" Background="#3303117F"/>
            <TextBox x:ConnectionId='9' x:Name="textBox2" HorizontalAlignment="Stretch"  Margin="10,0,0,0" TextWrapping="Wrap" Text="{Binding Path=from, Mode=TwoWay}" VerticalAlignment="Center" Grid.Row="4"  Grid.Column="1"/>
            <TextBox x:ConnectionId='10' x:Name="textBox3" HorizontalAlignment="Stretch" Margin="10,0,10,0" TextWrapping="Wrap" Text="{Binding Path=until, Mode=TwoWay}" VerticalAlignment="Center" Grid.Column="3" Grid.Row="4" />
            <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="1"  Grid.ColumnSpan="4" VerticalAlignment="Top"/>
            <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="4"  Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>
            <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Height="4" Grid.Row="5"  Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>
            <local:PModelxaml Grid.Row="5" Grid.ColumnSpan="4" Margin="5,5,5,5" />
        </Grid>
    </Grid>
</Page>

